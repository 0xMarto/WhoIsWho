# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /whoiswho                            controllers.Application.index()
GET     /whoiswho/chatRoom                   controllers.Application.chatRoom(username: String ?= null)
GET     /whoiswho/chatRoom/Play              controllers.Application.game(username)
GET     /whoiswho/aboutGame                  controllers.Application.aboutGame()
GET     /whoiswho/gameRoom                   controllers.Application.gameRoom()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
